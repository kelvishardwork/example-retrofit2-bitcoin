<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/cvTicker"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"
        card:cardCornerRadius="4dp">

        <RelativeLayout
            android:id="@+id/rlTicker"
            android:layout_width="match_parent"
            android:layout_height="153dp"
            android:padding="15dp">

            <ImageView
                android:id="@+id/ivBitcoin"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:gravity="center_vertical"
                android:src="@mipmap/ic_launcher_bitcoin" />

            <TextView
                android:id="@+id/tvTitleCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@+id/ivBitcoin"
                android:layout_toRightOf="@+id/ivBitcoin"
                android:text="Bitcoin (BTC)"
                android:textSize="15sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvTickerLast"
                android:layout_below="@+id/tvTitleCoin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@+id/ivBitcoin"
                android:layout_toRightOf="@+id/ivBitcoin"
                android:text="Ãšltimo: " />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTickerLast"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@+id/ivBitcoin"
                android:layout_toRightOf="@+id/ivBitcoin"
                android:text="Data: " />

            <TextView
                android:id="@+id/tvTickerHigh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDate"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@+id/ivBitcoin"
                android:layout_toRightOf="@+id/ivBitcoin"
                android:text="Maior: " />


            <TextView
                android:id="@+id/tvTickerLow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTickerHigh"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@+id/ivBitcoin"
                android:layout_toRightOf="@+id/ivBitcoin"
                android:text="Menor: " />

            <TextView
                android:id="@+id/tvTickerVol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTickerLow"
                android:layout_marginLeft="19dp"
                android:layout_marginRight="19dp"
                android:layout_marginStart="19dp"
                android:layout_toEndOf="@+id/ivBitcoin"
                android:layout_toRightOf="@+id/ivBitcoin"
                android:text="Vol. 24hs: " />


        </RelativeLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>